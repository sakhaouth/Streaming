<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LayerAuthentication"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/violet"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/heading"
            android:gravity="center"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/title"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/authMessage"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="@color/red"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="304dp"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_image"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/web_portal"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="@string/web_portal"
        android:background="@drawable/ic_signup_0"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/user_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_manual"
        android:layout_margin="20dp"
        android:background="@drawable/ic_signup_0"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/verify_text"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/dark"
            android:text="Getting Started Guide:\n"
            android:gravity="left"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:gravity="center"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Step-1\nClick on\nRequest Access\nButton"
            android:layout_height="80dp"
            android:background="@drawable/ic_guide_rectangle"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/ic_guide_rectangle"
            android:text="Step-2\nFill out\nThe information\nCorrectly"
            android:layout_height="80dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Step-3\nSubmit your\nRequest for\n Verification"
            android:layout_margin="10dp"
            android:background="@drawable/ic_guide_rectangle"
            android:layout_weight="1"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request_access"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/ic_button"
        android:text="@string/request_access"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="24dp" />
<!--    <Button-->
<!--        android:id="@+id/request_access"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="@color/white"-->
<!--        android:background="@drawable/ic_button"-->
<!--        android:text="@string/request_access"-->
<!--        />-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request_signOut"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="22dp"
        android:layout_margin="5dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/ic_button"
        android:text="@string/Sign_out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp" />
<!--    <Button-->
<!--        android:id="@+id/request_signOut"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="@color/white"-->
<!--        android:background="@drawable/ic_button"-->
<!--        android:text="@string/Sign_out"-->
<!--        />-->

</LinearLayout>

</ScrollView>
